<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimePlayer.UI.View.AnimeListView"
             Title="AnimeListView">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Шапка страницы: строка ввода для сортировки -->
            <StackLayout Grid.Row="0" Padding="10">
                <Entry Placeholder="Сортировать по названию" 
               Text="{Binding SearchText, Mode=TwoWay}"
               HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <!-- Основной список аниме -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding Animes}" Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" CornerRadius="10" BorderColor="Gray">
                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                                <!-- Картинка аниме -->
                                <Image Aspect="AspectFill"
                       WidthRequest="100"
                       HeightRequest="100"
                       Grid.RowSpan="3">
                                    <Image.Source>
                                        <UriImageSource Uri="{Binding ImageUrl}"
                                    CachingEnabled="true"
                                    CacheValidity="1.00:00:00" />
                                    </Image.Source>
                                </Image>

                                <!-- Название -->
                                <Label Text="{Binding Title}"
                       FontAttributes="Bold"
                       FontSize="Medium"
                       Grid.Column="1"
                       Grid.Row="0" />

                                <!-- Краткое описание -->
                                <Label Text="{Binding Description}"
                       FontSize="Small"
                       LineBreakMode="TailTruncation"
                       MaxLines="2"
                       Grid.Column="1"
                       Grid.Row="1" />

                                <!-- Оценка и год выпуска -->
                                <StackLayout Orientation="Horizontal"
                             Spacing="10"
                             Grid.Column="1"
                             Grid.Row="2">
                                    <Label Text="Оценка:" FontSize="Small"/>
                                    <Label Text="{Binding Rating}" FontSize="Small"/>
                                    <Label Text="Год:" FontSize="Small" Margin="10,0,0,0"/>
                                    <Label Text="{Binding YearRelease}" FontSize="Small"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Нижняя панель: кнопка добавления нового аниме -->
            <StackLayout Grid.Row="2" Padding="10">
                <Button Text="Добавить аниме"
                Command="{Binding AddAnimeCommand}"
                HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
