<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimePlayer.UI.View.AnimeListView"
             Title="AnimeListView">

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Animes}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" CornerRadius="10" BorderColor="Gray">
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                            <!-- Картинка аниме -->
                            <Image Source="{Binding ImageUrl}"
                                   Aspect="AspectFill"
                                   WidthRequest="100"
                                   HeightRequest="100"
                                   Grid.RowSpan="3" />

                            <!-- Название -->
                            <Label Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   Grid.Column="1"
                                   Grid.Row="0" />

                            <!-- Краткое описание -->
                            <Label Text="{Binding Description}"
                                   FontSize="Small"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   Grid.Column="1"
                                   Grid.Row="1" />

                            <!-- Оценка и год выпуска -->
                            <StackLayout Orientation="Horizontal"
                                         Spacing="10"
                                         Grid.Column="1"
                                         Grid.Row="2">
                                <Label Text="Оценка:" FontSize="Small"/>
                                <Label Text="{Binding Rating}" FontSize="Small"/>
                                <Label Text="Год:" FontSize="Small" Margin="10,0,0,0"/>
                                <Label Text="{Binding Year}" FontSize="Small"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>

</ContentPage>